
.content {
  padding: 10rpx 10rpx 10rpx 10rpx;
}
.logo {
  height: 100%;
  width: 100%;
}
.zhuti {
  height: 300rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.zuo {
  width: 250rpx;
  height: 100%;
  -webkit-box-flex: 0;
  -webkit-flex: none;
  flex: none;
}
.you {
  height: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.txt {
  display: -webkit-box;
  font-size: 30rpx;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #A9A9A9;
}